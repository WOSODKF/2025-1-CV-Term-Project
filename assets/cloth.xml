<mujoco model="cloth">
  <compiler angle="radian" coordinate="local"/>
  <option timestep="0.001" solver="CG" tolerance="1e-6" integrator="implicitfast"/>
  <size memory="20M"/>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="false"/>
    <flexcomp name="cloth" type="grid" count="16 16 1" spacing=".1 .1 .1" pos="0 0 0.1"
              radius=".001" mass="1" dim="2" rgba="0.5 0.5 0.5 1">
      <contact condim="3" solref="0.01 1" solimp=".95 .99 .0001" contype="4" conaffinity="65535" selfcollide="none"/>
      <edge equality="false" damping="2"/>
      <elasticity young="1e5" poisson="0" thickness="1e-2"/>
      <!-- <pin id="0 15 240 255"/> -->
    </flexcomp>
  </worldbody>
</mujoco>
